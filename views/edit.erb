<h2 class="text-xl font-bold tracking-wider text-gray-900 sm:text-2xl">メモの編集</h2>
<form action="/<%= @memo["title"] %>" method="POST" class="relative">
  <input type="hidden" name="_method" value="PUT">
  <div class="overflow-hidden border border-gray-300 rounded-lg shadow-sm focus-within:border-indigo-500 focus-within:ring-1 focus-within:ring-indigo-500">
    <label for="title" class="sr-only">タイトル</label>
    <input type="text" name="title" id="title" class="block w-full border-0 pt-2.5 text-lg font-medium placeholder-gray-500 focus:ring-0" placeholder="タイトル" value="<%= @memo["title"] %>" required>
    <label for="content" class="sr-only">メモ</label>
    <textarea rows="4" name="content" id="content" class="block w-full py-0 placeholder-gray-500 border-0 resize-none focus:ring-0 sm:text-sm" placeholder="ここに本文を入力してください" required><%= @memo["content"] %></textarea>
    <div class="h-px"></div>
    <div class="py-2">
      <div class="py-px">
        <div class="flex items-center justify-end px-2 py-2 space-x-3 border-t border-gray-200 sm:px-3">
          <div class="flex-shrink-0">
            <button type="submit" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              変更
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
