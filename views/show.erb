<div class="relative p-4">
  <h2 class="text-xl font-semibold text-gray-800">
    <%= @memo["title"] %>
  </h2>
  <p class="mt-1 text-gray-600">
    <%= @memo["content"] %>
  </p>
  <div class="flex justify-end mt-4 space-x-4">
    <a href="/<%= @memo["title"] %>/edit" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white transition-colors bg-indigo-600 border border-transparent rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
      編集
    </a>
    <form method="post" name="delete_memo" action="/<%= @memo["title"] %>">
      <input type="hidden" name="_method" value="DELETE">
      <a href="javascript:delete_memo.submit()" class="inline-flex items-center px-4 py-2 text-sm font-medium text-indigo-700 transition-colors bg-indigo-100 border border-transparent rounded-md hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">削除</a>
    </form>
  </div>
</div>
