<div class="relative focus-within:ring-2 focus-within:ring-indigo-500 p-4">
  <h3 class="text-sm font-semibold text-gray-800">
    <%= @memo["title"] %>
  </h3>
  <p class="mt-1 text-sm text-gray-600 line-clamp-2">
    <%= @memo["content"] %>
  </p>
  <div class="mt-4 flex justify-end space-x-4">
    <a href="#" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
      編集
    </a>
    <form method="post" name="delete_memo" action="/<%= @memo["title"] %>">
      <input type="hidden" name="_method" value="DELETE">
      <a href="javascript:delete_memo.submit()" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">削除</a>
    </form>
  </div>
</div>

<%= render(:erb, :'shared/links') %>
